<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_view_variant_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_item_height"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="2dp"
    android:paddingEnd="@dimen/search_key_line"
    android:paddingLeft="@dimen/search_key_line"
    android:paddingRight="@dimen/search_key_line"
    android:paddingStart="@dimen/search_key_line"
    android:paddingTop="2dp">

    <ImageView
        android:id="@+id/img_item"
        android:layout_width="@dimen/search_variant_icon"
        android:layout_height="@dimen/search_variant_icon"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/search_content_description"
        android:src="@drawable/less" />

    <TextView
        android:id="@+id/tv_item_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="2"
        android:textSize="12sp" />

</LinearLayout>